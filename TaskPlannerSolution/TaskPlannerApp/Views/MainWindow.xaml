<Window x:Class="TaskPlannerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:TaskPlannerApp.Models"
        Title="TaskPlanner" Height="600" Width="900"
        Background="#1d2125">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <!-- Nagłówek -->
        <TextBlock Text="TaskPlanner" 
                   FontSize="24" FontWeight="Bold"
                   Foreground="White"
                   Margin="20" DockPanel.Dock="Top"/>

        <!-- Główna siatka -->
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>

            <!-- TO DO -->
            <materialDesign:Card Grid.Column="0" Margin="10" Padding="10" Background="#161a1d">
                <StackPanel>
                    <TextBlock Text="TO DO" FontSize="18" Foreground="#c2c2c2"/>

                    <ListBox ItemsSource="{Binding TasksToDo}" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#22282C" Padding="5" CornerRadius="5" Margin="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="White"/>
                                        <TextBlock Text="{Binding Author}" FontSize="12" Foreground="White" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Content="➕ Add Task"
                            Foreground="White" Background="Transparent"
                            FontSize="16" Padding="5"
                            Command="{Binding AddTaskCommand}"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- IN PROGRESS -->
            <materialDesign:Card Grid.Column="1" Margin="10" Padding="10" Background="#161a1d">
                <StackPanel>
                    <TextBlock Text="IN PROGRESS" FontSize="18" Foreground="#c2c2c2"/>
                    <ListBox ItemsSource="{Binding TasksInProgress}" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#22282C" Padding="5" CornerRadius="5" Margin="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="White"/>
                                        <TextBlock Text="{Binding Author}" FontSize="12" Foreground="White" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </materialDesign:Card>

            <!-- DONE -->
            <materialDesign:Card Grid.Column="2" Margin="10" Padding="10" Background="#161a1d">
                <StackPanel>
                    <TextBlock Text="DONE" FontSize="18" Foreground="#c2c2c2"/>
                    <ListBox ItemsSource="{Binding TasksDone}" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#22282C" Padding="5" CornerRadius="5" Margin="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="White"/>
                                        <TextBlock Text="{Binding Author}" FontSize="12" Foreground="White" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </DockPanel>
</Window>
