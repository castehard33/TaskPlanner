<Window x:Class="TaskPlannerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="TaskPlanner" Height="600" Width="900"
        Background="#1d2125">

    <DockPanel>
        <!-- Nagłówek -->
        <TextBlock Text="TaskPlanner" 
                   FontSize="24" FontWeight="Bold"
                   Foreground="White"
                   Margin="20" DockPanel.Dock="Top"/>

        <!-- Główna siatka -->
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- TO DO -->
            <materialDesign:Card Grid.Column="0" Margin="10" Padding="10" Background="#161a1d">
                <StackPanel>
                    <TextBlock Text="TO DO" FontWeight="Bold" FontSize="18" Foreground="white"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- IN PROGRESS -->
            <materialDesign:Card Grid.Column="1" Margin="10" Padding="10" Background="#161a1d">
                <StackPanel>
                    <TextBlock Text="IN PROGRESS" FontWeight="Bold" FontSize="18" Foreground="white"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- DONE -->
            <materialDesign:Card Grid.Column="2" Margin="10" Padding="10" Background="#161a1d">
                <StackPanel>
                    <TextBlock Text="DONE" FontWeight="Bold" FontSize="18" Foreground="white"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </DockPanel>
</Window>
