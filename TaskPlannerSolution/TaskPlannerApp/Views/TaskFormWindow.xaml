<Window x:Class="TaskPlannerApp.Views.TaskFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj zadanie" Height="300" Width="400" Background="#1d2125">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Task name" Foreground="White" Margin="5"/>
            <TextBox x:Name="TaskNameTextBox" Width="200" Margin="5" Padding="5"/>

            <TextBlock Text="Task author:" Foreground="White" Margin="5"/>
            <TextBox x:Name="TaskAuthorTextBox" Width="200" Margin="5" Padding="5"/>

            <Button Content="Add task" Width="200" Height="40" Margin="10" Background="gray" Foreground="White" Click="SaveTask"/>
        </StackPanel>
    </Grid>
</Window>
